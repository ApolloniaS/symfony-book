{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block body %}
<section id="subintro">
      <div class="container">
        <div class="row">
          <div class="span8">
            <ul class="breadcrumb">
              <li><a href="{{path('home')}}"><i class="icon-home"></i></a><i class="icon-angle-right"></i></li>
              <li>Connexion
            </ul>
          </div>
        </div>
      </div>
    </section>
<div class="container">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ "Votre nom d'utilisateur ou votre mot de passe est incorrect.<br/>Veuillez r√©essayer." }}</div>
    {% endif %} 

    Pas encore de compte ? <a href="{{path('app_register')}}">Inscrivez-vous !</a>
    <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
    <label for="inputLogin">Login&nbsp;:</label>
    <input type="text" value="{{ last_username }}" name="login" id="inputLogin" class="form-control" required autofocus>
    <label for="inputPassword">Mot de passe&nbsp;:</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-theme" type="submit">
        Se connecter
    </button>
</form>
</div>
{% endblock %}
