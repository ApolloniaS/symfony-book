{% extends 'base.html.twig' %}

{% block title %}Les avis{% endblock %}

{% block body %}
<section id="subintro">
      <div class="container">
        <div class="row">
          <div class="span8">
            <ul class="breadcrumb">
              <li><a href="{{path('home')}}"><i class="icon-home"></i></a><i class="icon-angle-right"></i></li>
              <li><a href="{{path('livres')}}">Livres</a>
              <i class="icon-angle-right"></i>Les avis sur "{{livre.title}}"
            </ul>
          </div>
        </div>
      </div>
    </section>
    <section id="maincontent">
        <div class="container">
            <div class="row">
            {% if avis == null %}
              <div>Aucun avis n'a encore été écrit :(</br>
              Revenez plus tard, et n'hésitez pas à en ajouter un si vous avez lu ce livre !
              </div>
              {% else %}
              {% for unAvis in avis %}
                  <div class="span6">
                      <h4 class="rheading">[Note: {{unAvis.reviewScore}}/5] Le {{unAvis.reviewDate |date('d/m/Y')}}, {{unAvis.idUser.login}} a écrit<span></span></h4>
                      <blockquote>
                      <p>
                          <i class="icon-quote-left"></i>{{unAvis.reviewContent}}
                      </p>
                      </blockquote>
                  </div>
              {% endfor %}
            {% endif %}
            </div>
        </div>
    </section>
{% endblock %}