{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <section id="subintro">
      <div class="container">
        <div class="row">
          <div class="span8">
            <ul class="breadcrumb">
              <li><a href="{{path('home')}}"><i class="icon-home"></i></a><i class="icon-angle-right"></i></li>
              <li>Profil
            </ul>
          </div>
        </div>
      </div>
    </section>
    <section id="maincontent">
      <div class="container">
        <div class="row">
          <div class="span12">
            <article>
              <div class="heading">
                <h4>Votre profil</h4>
              </div>
              <div class="clearfix">
              </div>
              <div class="row">
                <div class="span8">
                  
                  <p>
                  
                <h4 class="rheading">Vos lectures<span></span></h4>
                <div class="tabbable tabs-top">
                  <ul class="nav nav-tabs">
                    <li class="active"><a href="#one" data-toggle="tab"><i class="icon-check-empty"></i>À lire</a></li>
                    <li><a href="#two" data-toggle="tab"><i class=" icon-bookmark"></i>En cours</a></li>
                    <li><a href="#three" data-toggle="tab"><i class="icon-check"></i>Lu</a></li>
                  </ul>
                  <div class="tab-content">
                    <div class="tab-pane active" id="one">
                      <p>
                        <strong>Retrouvez ici l'ensemble des livres que vous planifiez de dévorer un jour !</strong></br>
                        {% for item in infosUserBook %}
                          {% if app.user.id == item.idUser.id and item.readingStatus == "À lire" %}
                            <i class="icon-angle-right"></i>{{item.idBook.title}}</br>
                          {% endif %}
                        {% endfor %}
                      </p>
                    </div>
                    <div class="tab-pane" id="two">
                      <p>
                        <strong>Retrouvez ici les livres que vous lisez actuellement.</strong></br>
                        {% for item in infosUserBook %}
                          {% if app.user.id == item.idUser.id and item.readingStatus == "En cours" %}
                            <i class="icon-angle-right"></i>{{item.idBook.title}}</br>
                          {% endif %}
                        {% endfor %}
                      </p>
                    </div>
                    <div class="tab-pane" id="three">
                      <p>
                        <strong>Retrouvez ici l'ensemble des livres que vous avez déjà lus.</strong></br>
                        {% for item in infosUserBook %}
                          {% if app.user.id == item.idUser.id and item.readingStatus == "Lu" %}
                            <i class="icon-angle-right"></i>{{item.idBook.title}}</br>
                          {% endif %}
                        {% endfor %}
                      </p>
                    </div>
                  </div>
                </div>
                  </p>
                </div>
                <div class="span4">
                  <aside>
                    <div class="widget">
                      <div class="project-widget">
                        <h4 class="rheading">Bonjour {{app.user.firstName}} !<span></span></h4>
                        <ul class="project-detail">
                          <li><label>Nom d'utilisateur :</label> {{app.user.login}}</li>
                          <li><label>Email :</label> {{app.user.email}}</li>
                          <li><label>Date de naissance :</label> {{app.user.birthdate |date('d/m/Y')}}</li>
                        </ul>
                        <br/>
                        <a href="{{path('edition')}}">Modifier vos informations</a>
                      </div>
                    </div>
                  </aside>
                </div>
              </div>
            </article>
            <!-- end article full post -->
          </div>
        </div>
      </div>
    </section>
</div>
{% endblock %}
